@model SlvTeam.Domain.Models.EditProfileViewModel
@{
    ViewData["Title"] = "Редактирование профиля";
}

<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="EditProfile" asp-controller="Profiles" enctype="multipart/form-data">
            <h4>Редактирование аккаунта</h4>
            <hr/>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.FirstName"></label>
                <input asp-for="@Model.FirstName" class="form-control" value="@Model.FirstName"/>
                <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.LastName"></label>
                <input asp-for="@Model.LastName" class="form-control" value="@Model.LastName"/>
                <span asp-validation-for="@Model.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Email"></label>
                <input asp-for="@Model.Email" type="email" class="form-control" value="@Model.Email"/>
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Adress"></label>
                <input asp-for="@Model.Adress" class="form-control" value="@Model.Adress"/>
                <span asp-validation-for="@Model.Adress" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.AboutAs"></label>
                <textarea asp-for="@Model.AboutAs" type="text" class="form-control">@Model.AboutAs</textarea>
                <span asp-validation-for="@Model.AboutAs" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Phone"></label>
                <input asp-for="@Model.Phone" type="number" class="form-control" value="@Model.Phone"></input>
                <span asp-validation-for="@Model.Phone" class="text-danger"></span>
            </div>

            <label>Главная фотография</label>
            <div class="form-group">
                <input type="file" asp-for="ImagePath" accept=".jpg, .jpeg, .png" class="btn-info"/>
                <br>
            </div>

            <input type="type" asp-for="@Model.Id" style="visibility: hidden" value="@Model.Id"/>

            <button type="submit" class="btn btn-primary col-md-6">Сохранить</button>
        </form>
    </div>
</div>
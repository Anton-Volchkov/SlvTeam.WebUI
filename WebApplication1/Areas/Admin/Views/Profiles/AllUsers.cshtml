@model SlvTeam.Domain.Entities.SlvTeamUser[]
@{
    ViewData["Title"] = "Управление пользователями";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-bordered">
    <thead>
    <tr>
        <th>Название</th>
        <th>Описание</th>
        <th>Цена</th>
        <th>Действия</th>
    </tr>
    </thead>
    <tbody>
    @foreach(var user in Model)
    {
        <tr>
            <td>
                @user.FirstName
            </td>
            <td>
                @user.LastName
            </td>
            <td>
               @user.Location
            </td>
            <td>
               @if(user.IsSlvTeam)
               {
                   <a class="btn btn-danger" asp-area="Admin" asp-controller="Profiles" asp-action="SetSlvTeamStatus" asp-route-userId="@user.Id">
                       Убрать из SlvTeam
                   </a>
               }
               else
               {
                   <a class="btn btn-success" asp-area="Admin" asp-controller="Profiles" asp-action="SetSlvTeamStatus" asp-route-userID="@user.Id">
                       Добавить в SlvTeam
                   </a>
               }
            </td>
        </tr>
    }
    </tbody>
</table>